<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.griot_app.griot.MainOverviewActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/mediacover1_jpg" />

    <de.griot_app.griot.ProfileImageView
        android:id="@+id/profileImageView_interviewer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView_interviewer"
        style="@style/AppTheme.Text_Normal"
        android:text="Ole Wunder"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/profileImageView_interviewer"
        app:layout_constraintTop_toTopOf="@+id/profileImageView_interviewer"
        app:layout_constraintBottom_toBottomOf="@+id/profileImageView_interviewer" />
    
    <ImageView
        android:id="@+id/circle"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:src="@drawable/shape_circle_darkgrey"
        app:layout_constraintLeft_toRightOf="@+id/textView_interviewer"
        app:layout_constraintRight_toLeftOf="@+id/textView_narrator"
        app:layout_constraintTop_toTopOf="@+id/profileImageView_narrator"
        app:layout_constraintBottom_toBottomOf="@+id/profileImageView_narrator" />

    <TextView
        android:id="@+id/textView_narrator"
        style="@style/AppTheme.Text_Normal"
        android:text="Harry Vogt"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/profileImageView_narrator"
        app:layout_constraintTop_toTopOf="@+id/profileImageView_narrator"
        app:layout_constraintBottom_toBottomOf="@+id/profileImageView_narrator" />

    <de.griot_app.griot.ProfileImageView
        android:id="@+id/profileImageView_narrator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_comments"
        style="@style/AppTheme.Text_Small"
        android:textStyle="bold"
        android:text="2 Kommentare"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/profileImageView_interviewer" />

    <ImageView
        android:id="@+id/imageView_options"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/options"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_comments"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>