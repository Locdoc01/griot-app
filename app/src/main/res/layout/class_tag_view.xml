<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="38dp"
    android:background="@color/colorGriotBlue">

    <TextView
        android:id="@+id/textView_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Text_Normal"
        android:textColor="@color/colorGriotWhite"
        android:text=""
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_delete_tag"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/button_delete_tag"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/cancel"
        android:tint="@color/colorGriotWhite"
        app:layout_constraintDimensionRatio="1:1"
        android:adjustViewBounds="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textView_tag"
        app:layout_constraintRight_toLeftOf="@+id/imageView_spacer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/imageView_spacer"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/colorGriotWhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_delete_tag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"/>

</android.support.constraint.ConstraintLayout>