<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <TextView
        android:id="@+id/textView_list_seperator"
        style="@style/AppTheme.Text_Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deine Freunde"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintVertical_bias="0.92"
        android:visibility="gone" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_piv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.0575"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_piv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1565"
        android:orientation="vertical" />

    <de.griot_app.griot.views.ProfileImageView
        android:id="@+id/piv_person"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guideline_piv_left"
        app:layout_constraintRight_toLeftOf="@+id/guideline_piv_right"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"/>
    
    <TextView
        android:id="@+id/textView_person"
        style="@style/AppTheme.Text_Normal"
        android:layout_marginLeft="9dp"
        android:text="Batman"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/piv_person"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.01" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.86"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.94"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/button_choose"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline_button_left"
        app:layout_constraintRight_toRightOf="@id/guideline_button_right"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>