<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dimen_64">

    <TextView
        android:id="@+id/textView_topic"
        style="@style/AppTheme.Text_Normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="tzut"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginRight="@dimen/dimen_24"
        android:layout_marginEnd="@dimen/dimen_24"
        android:layout_marginBottom="@dimen/dimen_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_check"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/button_check"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_32"
        app:srcCompat="@drawable/checkbox_off"
        app:layout_constraintDimensionRatio="1:1"
        android:adjustViewBounds="true"
        android:layout_marginRight="@dimen/dimen_32"
        android:layout_marginEnd="@dimen/dimen_32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_expand"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/button_expand"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_24"
        app:srcCompat="@drawable/up"
        app:layout_constraintDimensionRatio="1:1"
        android:adjustViewBounds="true"
        android:layout_marginRight="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>